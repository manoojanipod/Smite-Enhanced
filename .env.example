# Panel Configuration
PANEL_PORT=8000
PANEL_HOST=0.0.0.0
HTTPS_ENABLED=false
DOCS_ENABLED=true

# Database
DB_TYPE=sqlite
DB_PATH=./data/smite.db
# MySQL (if DB_TYPE=mysql)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=smite
# DB_USER=smite
# DB_PASSWORD=changeme

# Hysteria2 Control Channel (existing, used by panel internals)
HYSTERIA2_PORT=443
HYSTERIA2_CERT_PATH=./certs/ca.crt
HYSTERIA2_KEY_PATH=./certs/ca.key

# Node Configuration (for node/.env)
NODE_API_PORT=8888
PANEL_CA_PATH=/path/to/panel/ca.crt
PANEL_ADDRESS=panel.example.com:443

# Security
SECRET_KEY=changeme-secret-key-change-in-production


########################################
# Hysteria2 Data Tunnel (new section)  #
########################################

# Enable/disable Hysteria2 tunnel service (Docker service "hysteria2")
HYSTERIA2_TUNNEL_ENABLED=false

# Public UDP port for Hysteria2 tunnel server (QUIC)
HYSTERIA2_TUNNEL_PORT=8448

# Path to Hysteria2 tunnel config (mounted into container)
HYSTERIA2_TUNNEL_CONFIG_PATH=./panel/hysteria/config.yaml


#############################
# WireGuard VPN (new)      #
#############################

# Enable/disable WireGuard server container
WIREGUARD_ENABLED=false

# WireGuard UDP port
WIREGUARD_PORT=51820

# Internal VPN network for WireGuard peers
WIREGUARD_NETWORK_CIDR=10.10.0.0/24

# Path for WireGuard config (keys, peers, etc.)
WIREGUARD_CONFIG_PATH=./panel/wireguard

# Public domain or IP for WireGuard clients to connect (optional)
WIREGUARD_SERVER_URL=

# Default number of peers to auto-generate on first start
WIREGUARD_DEFAULT_PEERS=5


################################
# Cloudflare Tunnel (new)      #
################################

# Enable/disable Cloudflare Tunnel container (cloudflared)
CF_TUNNEL_ENABLED=false

# Docker image for cloudflared
CF_TUNNEL_IMAGE=cloudflare/cloudflared:latest

# Cloudflare Tunnel token (from Cloudflare dashboard)
CF_TUNNEL_TOKEN=

# Logical name for this tunnel (informational, can be used later)
CF_TUNNEL_NAME=smite-tunnel

# Upstream protocol for Cloudflare Tunnel (http / https)
CF_TUNNEL_PROTOCOL=http

# Upstream service for Cloudflare to forward to (inside Docker network)
# Typical default: smite-panel:PANEL_PORT
CF_TUNNEL_UPSTREAM=smite-panel:8000
